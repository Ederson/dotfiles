# darwin specific config
alias e='mate'
alias ls='ls -hGF'
alias gd='git diff | e'

export EDITOR='mate -w'

# mategem
_mategem()
{
    local curw
    COMPREPLY=()
    curw=${COMP_WORDS[COMP_CWORD]}
    local gems="$(gem environment gemdir)/gems"
    COMPREPLY=($(compgen -W '$(ls $gems)' -- $curw));
    return 0
}

complete -F _mategem -o dirnames mategem